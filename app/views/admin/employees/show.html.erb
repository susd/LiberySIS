<ol class="breadcrumb">
  <li><%= link_to 'Employees', admin_employees_path %></li>
  <li class="active"><%= @employee.name %></li>
</ol>

<div class="page-header">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag @employee.user.image_url if @employee.user.present? %>
    </div>
    <div class="col-md-6">
      <h2><%= @employee.name %></h2>

      <h4>
        <%= @employee.title %><br>
        <small><%= @employee.sites.map(&:name).join(', ') %></small>
      </h4>
    </div>
    <div class="col-md-4">
      <%= link_to 'Edit',
          edit_admin_employee_path(@employee),
          class: 'pull-right btn btn-primary' %>
    </div>
  </div>
</div>

<div class="attribute">
  <div class="attribute-label">
    <small>Associated User Account</small>
  </div>
  <div class="attribute-value">
    <%= link_to @employee.try(:email), admin_user_path(@employee.user) %>
  </div>
</div>

<div class="attribute">
  <div class="attribute-label">
    <small>Org Unit</small>
  </div>
  <div class="attribute-value">
    <%= @employee.org_unit.try(:name) || "(Not set)" %>
  </div>
</div>
