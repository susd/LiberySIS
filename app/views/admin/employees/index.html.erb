<section data-behavior="filtered_table" data-source-url="<%= search_admin_employees_path %>">
  <div class="page_search">
    <div class="form-group">
      <%= text_field_tag 'query', nil,
            {
              size: 30, placeholder: 'Search by name, email, or title', autocomplete: "off",
              data: {behavior: "filter-query"},
              class: 'form-control'
            }
            %>
    </div>
  </div>

  <table class="table table-striped" data-behavior="filter-original">
    <%= render(partial: 'employee_row', collection: @employees, as: :employee) %>
  </table>

  <table class="table table-striped">
    <tbody data-behavior="filter-results"></tbody>
  </table>
</section>

<%= paginate @employees %>
