<%= bootstrap_form_for @employee, url: submit_path_for(@employee) do |f| %>

  <section class="form_section">
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>

        <div class="row">
          <div class="col-md-8">
            <%= f.date_select :birthdate %>
          </div>
          <div class="col-md-4">
            <%= f.select :sex, {'Female' => 'f', 'Male' => 'm'} %>
          </div>
        </div>

        <%= f.select :type, {'Employee' => nil, 'Teacher' => 'Teacher'} %>

      </div>
      <div class="col-md-6">
        <%= f.text_field :title %>
        <%= f.text_field :email %>
        <%= f.select :state, %w{active inactive} %>
      </div>
    </div>
  </section>

  <section class="form_section">
    <h4>Sites</h4>
    <div class="row">
      <% @sites.in_groups(3, false) do |grp| %>
        <div class="col-md-4">
          <% grp.each do |site| %>
            <div class="checkbox">
              <%= label_tag dom_id(site) do %>
                <%= check_box_tag "#{@employee.class.to_s.downcase}[site_ids][]", site.id, @employee.site_ids.include?(site.id) %>
                <%= site.name %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <section class="form_section">
    <h4>Primary Site</h4>
    <%= f.select :primary_site_id,
        Site.order(:code).map{|s| [s.name, s.id]},
        hide_label: true %>
  </section>

  <section class="form_section">
    <div class="form-group">
      <h4>User Account</h4>
      <%= f.hidden_field :user_id, data: {bind: 'autocomplete_select'} %>
      <%= text_field_tag :user_query, nil,
          class: 'form-control',
          placeholder: 'Type a name or email',
          data: {
            behavior: 'autocomplete',
            target: '#employee_user_id',
            source_url: search_admin_users_path
          },
          hide_label: true %>
      <p class="help-block">
        Current User:
        <span data-bind="autocomplete_select">
          <%= @employee.user.try(:email) || "(not set)" %>
        </span>
      </p>
    </div>
  </section>

  <section class="form_section">
    <h4>Org Unit</h4>
    <%= f.select :gapps_org_unit_id,
        Gapps::OrgUnit.select_options,
        include_blank: true,
        hide_label: true %>
  </section>

  <div class="form-actions">
    <%= f.submit %>
  </div>

<% end %>
