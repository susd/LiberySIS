<ol class="breadcrumb">
  <li><%= link_to @employee.name, admin_employee_path(@employee) %></li>
  <li class="active">Edit</li>
</ol>

<%= bootstrap_form_for @employee, url: admin_employee_path(@employee) do |f| %>

  <h4>Sites</h4>
  <div class="row">
    <% @sites.in_groups(3, false) do |grp| %>
      <div class="col-md-4">
        <% grp.each do |site| %>
          <div class="checkbox">
            <%= label_tag dom_id(site) do %>
              <%= check_box_tag 'employee[site_ids][]', site.id, @employee.site_ids.include?(site.id) %>
              <%= site.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <label for="user_query">User</label>
    <%= f.hidden_field :user_id, data: {bind: 'autocomplete_select'} %>
    <%= text_field_tag :user_query, nil, class: 'form-control', placeholder: 'Type a name or email',
        data: {behavior: 'autocomplete', target: '#employee_user_id', source_url: search_admin_users_path} %>
    <p class="help-block">
      User ID:
      <span data-bind="autocomplete_select">
        <%= @employee.user_id %>
      </span>
    </p>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>

<% end %>
