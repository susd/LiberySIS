
<%= image_tag @user.image_url %>

<p><%= @user.name %></p>

<p><%= @user.email %></p>

<p><%= @user.last_sign_in_at %></p>

<p><%= @user.last_sign_in_ip %></p>

<p><%= link_to 'Edit', edit_admin_user_path(@user) %></p>

<% if @employees %>

<h5>Assoc Employees</h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.title %></td>
        <td>
          <%= bootstrap_form_for employee, url: admin_employee_path(employee) do |f| %>
            <%= f.hidden_field :user_id, value: 'null' %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
