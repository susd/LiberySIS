<section data-behavior="filtered_table" data-source-url="<%= search_admin_users_path %>">
  <div class="page_search">
    <div class="form-group">
      <%= text_field_tag 'query', nil,
            {
              size: 30, placeholder: 'Search by name or email', autocomplete: "off",
              data: {behavior: "filter-query"},
              class: 'form-control'
            }
            %>
    </div>
  </div>

  <table class="table table-striped" data-behavior="filter-original">
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Assoc Employee?</th>
      <th>Primary Site</th>
      <th>Roles</th>
    </tr>
    <%= render(partial: 'user_row', collection: @users, as: :user) %>
  </table>

  <table class="table table-striped">
    <tbody data-behavior="filter-results"></tbody>
  </table>
</section>

<%= paginate @users %>
