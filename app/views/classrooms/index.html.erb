

<div class="page-header">
  <h2>
    Classrooms
  </h2>
</div>

<% if @sites && @sites.count > 1 %>

<ul class="nav nav-pills">
  <% @sites.each do |site| %>
    <%= active_li(site == @site) do %>
      <%= link_to site.abbr.upcase, site_classrooms_path(site) %>
    <% end %>
  <% end %>
</ul>

<p></p>

<% end %>

<% cache(classrooms_cache_key(@classrooms, @site)) do %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Site</th>
  </tr>
  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= link_to classroom.name, classroom %></td>
      <td><%= classroom.site.name %></td>
    </tr>
  <% end %>
</table>


<%= paginate(@classrooms) %>

<% end %>
